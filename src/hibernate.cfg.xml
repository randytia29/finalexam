<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/shop</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        
        <mapping class="com.codequ.domain.Category" />
        <mapping class="com.codequ.domain.Product" />
        <mapping class="com.codequ.domain.Customer" />
        <mapping class="com.codequ.domain.PaymentMethod" />
        <mapping class="com.codequ.domain.Address" />
        <mapping class="com.codequ.domain.Order" />
        <mapping class="com.codequ.domain.Supplier" />
        <mapping class="com.codequ.domain.OrderDetail" />
        <mapping class="com.codequ.domain.Mahasiswa" />        
        <mapping class="com.codequ.domain.Employee" />        
        <mapping class="com.codequ.domain.ContractEmployee" />        
        <mapping class="com.codequ.domain.PermanentEmployee" />        
        <mapping class="com.codequ.domain.FreelanceEmployee" />        
        <mapping class="com.codequ.domain.PartTimeEmployee" />        
    </session-factory>
</hibernate-configuration>